<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="adw" version="1.4"/>
  <template class="StMainWindow" parent="AdwApplicationWindow">
    <property name="icon-name">skytemple_randomizer</property>
    <property name="title">SkyTemple Randomizer</property>
    <property name="width-request">420</property>
    <property name="height-request">360</property>
    <signal name="realize" handler="on_main_window_realize"/>
    <signal name="notify::default-width" handler="on_main_window_notify_default_width"/>
    <signal name="notify::default-height" handler="on_main_window_notify_default_height"/>
    <signal name="notify::maximized" handler="on_main_window_notify_maximized"/>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 640sp</condition>
        <setter object="header_bar" property="title-widget"/>
        <setter object="switcher_bar" property="reveal">True</setter>
      </object>
    </child>
    <property name="content">
      <object class="AdwToolbarView">
            <property name="top-bar-style">ADW_TOOLBAR_RAISED_BORDER</property>
            <property name="bottom-bar-style">ADW_TOOLBAR_RAISED_BORDER</property>
            <child type="top">
              <object class="AdwHeaderBar" id="header_bar">
                <property name="centering-policy">1</property>
                <property name="title-widget">
                  <object class="AdwViewSwitcher" id="view_switcher">
                    <property name="stack">stack</property>
                    <property name="policy">wide</property>
                  </object>
                </property>
              </object>
            </child>
            <property name="content">
              <object class="AdwViewStack" id="stack">
                <property name="vexpand">true</property>
                <child>
                  <object class="AdwViewStackPage" id="page_start">
                    <property name="child">
                      <object class="StWelcomePage"/>
                    </property>
                    <property name="icon-name">skytemple-e-worldmap-symbolic</property>
                    <property name="name">page_start</property>
                    <property name="title" translatable="true">Start</property>
                    <property name="use-underline">true</property>
                  </object>
                </child>
                <child>
                  <object class="AdwViewStackPage" id="page_monsters">
                    <property name="child">
                      <object class="StMonstersPage"/>
                    </property>
                    <property name="icon-name">skytemple-e-monster-symbolic</property>
                    <property name="name">page_monsters</property>
                    <property name="title" translatable="true">Pok√©mon</property>
                    <property name="use-underline">true</property>
                  </object>
                </child>
                <child>
                  <object class="AdwViewStackPage" id="page_dungeons">
                    <property name="child">
                      <object class="StDungeonsPage"/>
                    </property>
                    <property name="icon-name">skytemple-e-dungeon-symbolic</property>
                    <property name="name">page_dungeons</property>
                    <property name="title" translatable="true">Dungeons</property>
                    <property name="use-underline">true</property>
                  </object>
                </child>
                <child>
                  <object class="AdwViewStackPage" id="page_text">
                    <property name="child">
                      <object class="StTextPage"/>
                    </property>
                    <property name="icon-name">skytemple-e-string-symbolic</property>
                    <property name="name">page_text</property>
                    <property name="title" translatable="true">Text</property>
                    <property name="use-underline">true</property>
                  </object>
                </child>
                <child>
                  <object class="AdwViewStackPage" id="page_tweaks">
                    <property name="child">
                      <object class="StTweaksPage"/>
                    </property>
                    <property name="icon-name">skytemple-e-special-symbolic</property>
                    <property name="name">page_tweaks</property>
                    <property name="title" translatable="true">Tweaks</property>
                    <property name="use-underline">true</property>
                  </object>
                </child>
              </object>
            </property>
            <child type="bottom">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkActionBar">
                    <child type="start">
                      <object class="GtkBox">
                        <child>
                          <object class="GtkButton" id="button_settings">
                            <property name="child">
                              <object class="AdwButtonContent">
                                <property name="icon-name">skytemple-document-edit-symbolic</property>
                              </object>
                            </property>
                            <signal name="clicked" handler="on_button_settings_clicked"/>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child type="end">
                      <object class="GtkBox">
                        <child>
                          <object class="GtkButton" id="button_randomize">
                            <property name="child">
                              <object class="AdwButtonContent">
                                <property name="icon-name">skytemple-export-symbolic</property>
                                <property name="label">Randomize</property>
                              </object>
                            </property>
                            <property name="css-classes">suggested-action</property>
                            <signal name="clicked" handler="on_button_randomize_clicked"/>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwViewSwitcherBar" id="switcher_bar">
                    <property name="stack">stack</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
    </property>
  </template>
</interface>